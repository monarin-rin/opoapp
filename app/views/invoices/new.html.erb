<%= form_with model: @invoice, local: true do |f| %>
  <div class="field">
    <%= f.label :invoice_number %>
    <%= f.text_field :invoice_number %>
  </div>

  <div class="field">
    <%= f.label :company_name %>
    <%= f.text_field :company_name %>
  </div>

  <div class="field">
    <%= f.label :company_address %>
    <%= f.text_field :company_address %>
  </div>

  <div class="field">
    <%= f.label :company_tax_id %>
    <%= f.text_field :company_tax_id %>
  </div>

  <div class="field">
    <%= f.label :customer_name %>
    <%= f.text_field :customer_name %>
  </div>

  <div class="field">
    <%= f.label :customer_address %>
    <%= f.text_field :customer_address %>
  </div>

  <div class="field">
    <%= f.label :tax_rate %>
    <%= f.number_field :tax_rate, step: 0.01 %>
  </div>

  <div class="field">
    <%= f.label :total_amount %>
    <%= f.number_field :total_amount, step: 0.01 %>
  </div>

  <div class="field">
    <%= f.label :invoice_date %>
    <%= f.date_field :invoice_date %>
  </div>

  <div class="actions">
    <%= f.submit "Create Invoice" %>
  </div>
<% end %>
